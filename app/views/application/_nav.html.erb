
   <% if current_user %>
          <a class="dropdown-button" href="#"
                data-activates="user-menu" 
                data-beloworigin="true"
                data-hover="true">
            <%#= image_tag current_user.gravatar, class: "circle responsive-img profile-image" %>
            <%= current_user.name %><i class="material-icons right">arrow_drop_down</i>
          </a>
          <ul id="user-menu" class="dropdown-content">
            <li>
              <%= link_to user_profile_path do %>
                <i class="material-icons left">perm_identity</i>
                <%= t('nav.profile') %>
              <% end %>
            </li>
            
            <li class="divider"></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="material-icons left">input</i>
                <%= t("nav.log_out") %>
              <% end %>
            </li>
          </ul>
        <% else %>
    
      
      
        <%= link_to  new_user_session_path,class: "btn-floating waves-effect waves-light wg-external-submit-button secondary-content", title: "Вход" do %>
                <i class="medium material-icons right">person_pin</i>
                
         <% end %>
      <% end %>  

